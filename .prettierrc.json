{
    "useTabs": true,
    "tabWidth": 2,
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "ignore",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["*.yml", "*.yaml*"],
            "options": {
                "useTabs": false,
                "tabWidth": 2
            }
        }
    ]
}